pkgname="bearssl"
version="0.6"
distfiles="https://bearssl.org/bearssl-${version}.tar.gz"
build_style="makefile"
license="MIT"
license_file="LICENSE.txt"

neko_install()
{
	neko_pkg install bin build/brssl
	neko_pkg install lib build/libbearssl.so
	neko_pkg install lib build/libbearssl.a
	# Possibly move to bearssl-devel package
	neko_pkg install inc inc/*
}

neko_uninstall()
{
	neko_pkg uninstall bin brssl
	neko_pkg uninstall lib libbearssl.so
	neko_pkg uninstall lib libbearssl.a
	for file in bearssl.h bearssl_aead.h bearssl_block.h bearssl_ec.h bearssl_hash.h bearssl_hmac.h bearssl_kdf.h bearssl_pem.h bearssl_prf.h bearssl_rand.h bearssl_rsa.h bearssl_ssl.h bearssl_x509.h
	do
		neko_uninstall inc "${file}"
	done
}

pkgname="bearssl"
version="0.6"
distfiles="https://bearssl.org/bearssl-${version}.tar.gz"
build_style="makefile"
license="MIT"
license_file="LICENSE.txt"

neko_install()
{
	neko_pkg bin build/brssl
	neko_pkg lib build/libbearssl.so
	neko_pkg lib build/libbearssl.a
	# Possibly move to bearssl-devel package
	neko_pkg inc inc/*
}

neko_uninstall()
{
	neko_pkg uninstall /bin/brssl
	neko_pkg uninstall /lib/libbearssl.so
	neko_pkg uninstall /lib/libbearssl.a
}

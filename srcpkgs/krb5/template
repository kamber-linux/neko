pkgname="krb5"
short_desc="Kerberos Version 5"
version="1.19.1"
revision="1"
distfiles="http://web.mit.edu/kerberos/dist/krb5/${version%.*}/krb5-${version}.tar.gz"
build_style="configure"
CC="gcc"
license="MIT"
license_file="NOTICE"

do_build()
{
	./src/configure
	make
}

krb5_devel_pkg()
{
	pkgname="krb5-devel"
	short_desc="krb5 - developement files"
	do_install()
	{
		for file in include/gssapi include/gssapi/* include/krb5 include/krb5/*
		do
			pkg_install inc "${file}"
		done
		pkg_install lib "*.so*"
		pkg_install lib pkgconfig
		pkg_install bin build-tools/krb5-config
	}
}
